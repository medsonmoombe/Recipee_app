<%= stylesheet_link_tag('screens') %>
<div class=" m-5 d-flex justify-content-between align-items-center w-75 m-auto" >
<h1>List of foods</h1>

 <%= link_to 'Add Food',new_food_path, class:"btn d-flex btn1"%> 

</div>


<table  class="table table-striped table-bordered m-5 tabl m-auto">
<thead>
<tr>
<th scope="col" class="th">Food </th>
<th class="th">Measurement unit </th>
<th class="th">Unit price </th>
<th class="th">Actions </th>
</tr>
</thead>
<tbody>
    <% @foods.each do |food|%>
<tr>
            <td> <%= food.name%></td>
            <td> <%= food.measurement_unit%></td>
            <td> $ <%= food.price%></td>
            <td><%= button_to 'delete', food_path(food.id), method: :delete, class:"btn btn-warning"%></td>
   </tr>
    <%end%>
</tbody>
 </table>